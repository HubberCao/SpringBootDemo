<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sp.dao.UserDao">

    <resultMap id="BaseResultMap" type="com.sp.model.User">
        <result column="id" jdbcType="INTEGER" property="id" />
        <result column="userName" jdbcType="VARCHAR" property="name" />
    </resultMap>

    <select id="findByUserName" resultType="com.sp.model.User">
        select * from user where name = #{id}
    </select>

</mapper>
